#!/bin/bash
#
#	Wrap the esp8266 binutils. Not much is needed, just the final
#	binary conversion
#
TARGET=a.out
STACK=
ARGS=""
#
#	Find the target and strip out the -o foo option
#
while [[ $# -gt 0 ]]
do
	case "$1" in
	-o)
	TARGET="$2"
	shift
	shift
	;;
	-s)
	STACK="$2"
	shift
	shift
	;;
	*)
	ARGS+=' '"$1"
	shift
	;;
esac
done

avr32-ld $ARGS -o "$TARGET.bin"
$FUZIX_ROOT/Library/tools/elf2bin -p avr32 -o "$TARGET" "$TARGET.bin"
rm -f "$TARGET.bin"


